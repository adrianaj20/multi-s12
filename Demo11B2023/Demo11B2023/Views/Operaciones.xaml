<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo11B2023.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingresar base"
                   Text="{Binding Base}"
                   ></Entry>
            <Entry Placeholder="Ingresar altura"
                   Text="{Binding Altura}" ></Entry>

            <Button Text="Area" Command="{Binding CalcularArea}"/>

            <Button Text="Perimetro" Command="{Binding CalcularPerimetro}"/>
            
            
            <Label  Text="{Binding Area}" FontSize="50" />
            <Label  Text="{Binding Perimetro}" FontSize="50" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>